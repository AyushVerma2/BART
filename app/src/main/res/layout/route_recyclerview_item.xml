<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:layout_marginTop="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:animateLayoutChanges="true">

        <RelativeLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="38dp"
                android:layout_toStartOf="@id/etds"
                android:paddingTop="8dp"
                android:text="Pittsburgh / Bay Pt"
                android:textColor="#000000"
                android:textSize="30sp" />

            <View
                android:id="@+id/color_band"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:layout_alignBottom="@id/etds"
                android:layout_alignParentStart="true"
                android:layout_alignTop="@id/name"
                android:background="#ad3844" />

            <TextView
                android:id="@+id/etds"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@id/name"
                android:paddingBottom="8dp"
                android:paddingEnd="8dp"
                android:text="2, 4, 5"
                android:textColor="#000000"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/arrival"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/etds"
                android:layout_alignParentStart="true"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="38dp"
                android:layout_toEndOf="@id/color_band"
                android:text="Arrives 8:30"
                android:textColor="#ff6d6d6d"
                android:textSize="16sp" />
        </RelativeLayout>

        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/chart"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_alignParentBottom="true"
            android:layout_below="@id/arrival"
            android:visibility="gone" />

    </LinearLayout>
</android.support.v7.widget.CardView>